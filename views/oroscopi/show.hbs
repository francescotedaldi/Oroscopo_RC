<div class="row">
    <div class="col s12 m8">
        <h3>{{oroscopo.title}}
            <small>{{{saveIcon oroscopo.user user oroscopo._id false}}}</small>
        </h3>
        <div class="card oroscopo">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{oroscopo.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{oroscopo.user.displayName}}</span>
                <img src="{{oroscopo.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/oroscopi/user/{{oroscopo.user._id}}">More From {{oroscopo.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>